<form
  action="/category/edit/<%= game.game_id %>"
  method="POST"
  enctype="multipart/form-data"
>
  <img
    class="game-image"
    src="<%= game.image_path || 'https://placehold.co/300x300/jpg' %>"
    alt="<%= game && game.game_name ? game.game_name + ' Image' : 'Game Image' %>"
    width="300"
    height="300"
  />

  <div>
    <label for="game_name">Game Name:</label>
    <input
      type="text"
      id="game_name"
      name="game_name"
      value="<%= game.game_name %>"
      required
    />
  </div>

  <div>
    <label for="game_description">Game Description:</label>
    <textarea id="game_description" name="game_description" required>
<%= game.game_description %></textarea
    >
  </div>

  <div>
    <label for="classification_id">Classification:</label>
    <select id="classification_id" name="classification_id" required>
      <option value="" disabled>Select Classification</option>
      <% classifications.forEach(classification => { %>
        <option value="<%= classification.classification_id %>" 
          <%= classification.classification_id === game.classification_id ? 'selected' : '' %>>
          <%= classification.classification_name %>
        </option>
      <% }); %>
    </select>
  </div>

  <div>
    <label for="image">Image:</label>
    <input type="file" id="image" name="image" />
  </div>

  <button type="submit">Update Game</button>
</form>
